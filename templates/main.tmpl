{namespace closure-hello.view}

{template main}
  <html>
    <head>
      <title>{$title}</title>
    </head>
    <body>
      {$body | noAutoescape}
    </body>
  </html>
  
{/template}

{template hello-world}
  <h1>Hello World</h1>
{/template}

{template todos}
  <h1>Tasks for today:</h1>
  <ul>
    {foreach $task in $todos}
      <li>{$task}</li>
    {/foreach}
  </ul>
{/template}
